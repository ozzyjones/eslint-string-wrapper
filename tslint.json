{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "src/test/*.ts"
        ]
    },
    "jsRules": {},
    "rules": {
        "max-classes-per-file": [true, 2],
        "quotemark": [true, "single", "avoid-escape"],
        "variable-name": [true, "allow-leading-underscore"]
    },
    "rulesDirectory": []
}